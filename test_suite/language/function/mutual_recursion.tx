#!/usr/bin/env tx

# let is_odd: Fn<<Int> Bool>;
fn is_odd(n: Int) -> Bool;

fn is_even(n: Int) -> Bool {
  if (n == 0) { return true; }
  return is_odd(n - 1);
}

fn is_odd(n: Int) -> Bool {
  if (n == 0) { return false; }
  return is_even(n - 1);
}

std_println(is_even(4)); # expect: true
std_println(is_odd(3)); # expect: true
