var f: Nil or Fn<<>, Nil> = nil;
var g: Nil or Fn<<>, Nil> = nil;

{
  var local = "local";
  fn f_() {
    std_println(local);
    local = "after f";
    std_println(local);
  }
  f = f_;

  fn g_() {
    std_println(local);
    local = "after g";
    std_println(local);
  }
  g = g_;
}; # NOTE: ';' to prevent following paren to be interpreted as call of block

(f as Fn<<>, Nil>)();
# expect: local
# expect: after f

(g as Fn<<>, Nil>)();
# expect: after f
# expect: after g
